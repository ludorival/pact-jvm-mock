{
  "consumer": {
    "name": "shopping-list"
  },
  "interactions": [
    {
      "description": "get the user profile",
      "providerStates": [
        {
          "name": "The user has a preferred shopping list",
          "params": {
            "userId": 123
          }
        }
      ],
      "request": {
        "method": "GET",
        "path": "/user-service/v1/user/123"
      },
      "response": {
        "body": {
          "email": "user@email.com",
          "id": 123,
          "name": "User name",
          "userPreferences": {
            "preferredShoppingListId": 1
          }
        },
        "status": 200
      }
    },
    {
      "description": "should set preferred shopping list",
      "request": {
        "body": {
          "preferredShoppingListId": 1
        },
        "method": "PUT",
        "path": "/user-service/v1/user/123"
      },
      "response": {
        "body": {
          "email": "user@email.com",
          "id": 123,
          "name": "User name",
          "userPreferences": {
            "preferredShoppingListId": 1
          }
        },
        "status": 200
      }
    }
  ],
  "metadata": {
    "pact-jvm": {
      "version": "4.6.16"
    },
    "pactSpecification": {
      "version": "3.0.0"
    }
  },
  "provider": {
    "name": "user-service"
  }
}
